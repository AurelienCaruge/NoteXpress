{% extends 'base.html.twig' %}

{% block title %}Hello HomepageController!
{% endblock %}

{% block body %}
	{{ dump(notes) }}

	<div class="p-5 mb-4 bg-body-tertiary rounded-3">
		<div class="container-fluid py-5">
			<h1 class="display-5 fw-bold">La prise de notes facile.</h1>
			<p class="col-md-8 fs-4">Ravis de vous revoir USER NAME ! Vous avez X notes enregistrées. Qu'allez-vous écrire aujourd'hui ?</p>
			<a href="#" class="btn btn-primary btn-lg" type="button">Créer une note</a>
		</div>
	</div>

	<div class="row gap-3 justify-content-center">
		{% if notes is not empty %}
			{% for item in notes %}
				{% if item.user == app.user %}
					{% if item.isPublished == 1 %}
						<div class="card" style="width: 18rem;">
							<div class="card-body">
								<h5 class="card-title">{{ item.title }}</h5>
								<h6 class="card-subtitle mb-2 text-body-secondary">Category</h6>
								<p class="card-text">{{ item.content|slice(0, 50) }}...</p>
								<a href="#" class="card-link">Accèder</a>
								<a href="#" class="card-link">Éditer</a>
							</div>
						</div>
					{% endif %}
				{% endif %}
			{% endfor %}
		{% else %}
			<p>Aucune note pour le moment.</p>
		{% endif %}
	</div>
{% endblock %}
